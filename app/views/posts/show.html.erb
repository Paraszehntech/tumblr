<div id="post_content"> 
   <h1 class="title">
        <%= @post.title %>
    </h1>

    <p class ="date">
        Submitted <%= time_ago_in_words(@post.created_at) %> ago 
        <br><br>
        <%= link_to "Edit Project" ,edit_post_path(@post) ,class:"edit" %> 
        <%= button_to "Delete Project", custom_delete_post_path(@post), method: :delete, data: { confirm: 'Are you sure?' },class:"delete" %>

    </p>
    <p class ="body">
        <%= @post.body %>
    </p>
    <div id="comments">
        <h2><%= @post.comments.count %> Comments</h2>
        <%= render @post.comments %>
        <h3 style="width:40%; background-color : #529FCD; padding : 5px;"> Join Discussion: </h3>
        <%= render "comments/form" %>
    </div>
</div>  